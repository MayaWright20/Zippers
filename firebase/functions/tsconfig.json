{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
    "@env/*": ["path/to/env/*"]
  }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}

